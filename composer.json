{
    "name": "alexskrypnyk/shellvar",
    "description": "Utility to work with shell variables.",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/AlexSkrypnyk/shellvar",
    "support": {
        "issues": "https://github.com/AlexSkrypnyk/shellvar/issues",
        "source": "https://github.com/AlexSkrypnyk/shellvar"
    },
    "require": {
        "php": ">=8.2",
        "alexskrypnyk/csvtable": "^1.2",
        "symfony/console": "^7.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2",
        "drupal/coder": "^8.3.31",
        "ergebnis/composer-normalize": "^2.48.2",
        "mikey179/vfsstream": "^1.6.12",
        "opis/closure": "^4.4",
        "phpstan/phpstan": "^2.1.32",
        "phpunit/phpunit": "^12.4.5",
        "rector/rector": "^2.2.11"
    },
    "replace": {
        "alexskrypnyk/shell-variables-extractor": "self.version"
    },
    "autoload": {
        "psr-4": {
            "AlexSkrypnyk\\Shellvar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlexSkrypnyk\\Shellvar\\Tests\\": "tests/phpunit"
        }
    },
    "bin": [
        "shellvar"
    ],
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "build": [
            "@composer bin box require --dev humbug/box",
            "patch vendor-bin/box/vendor/humbug/box/src/RequirementChecker/RequirementsBuilder.php < box-php85.patch",
            "box validate",
            "box compile"
        ],
        "lint": [
            "phpcs",
            "phpstan",
            "rector --dry-run"
        ],
        "lint-fix": [
            "rector",
            "phpcbf"
        ],
        "reset": "rm -Rf vendor vendor-bin composer.lock",
        "test": "phpunit --no-coverage",
        "test-coverage": "phpunit"
    }
}
