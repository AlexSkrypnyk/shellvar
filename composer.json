{
    "name": "alexskrypnyk/shellvar",
    "type": "library",
    "description": "Utility to work with shell variables.",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/AlexSkrypnyk/shellvar",
    "support": {
        "issues": "https://github.com/AlexSkrypnyk/shellvar/issues",
        "source": "https://github.com/AlexSkrypnyk/shellvar"
    },
    "require": {
        "php": ">=8.1",
        "symfony/console": "^6.0 || ^7.0",
        "alexskrypnyk/csvtable": "^0.3.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "dealerdirect/phpcodesniffer-composer-installer": "^1",
        "drupal/coder": "^8.3",
        "mikey179/vfsstream": "^1.6",
        "opis/closure": "^3.6",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10",
        "rector/rector": "^1.0.0"
    },
    "replace": {
        "alexskrypnyk/shell-variables-extractor": "self.version"
    },
    "autoload": {
        "psr-4": {
            "AlexSkrypnyk\\Shellvar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlexSkrypnyk\\App\\Tests\\": "tests/phpunit"
        },
        "classmap": [
            "tests/phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": [
            "phpcs",
            "phpmd --exclude vendor,vendor-bin,node_modules . text phpmd.xml",
            "phpstan",
            "rector --clear-cache --dry-run"
        ],
        "lint-fix": [
            "rector --clear-cache",
            "phpcbf"
        ],
        "test": "if [ \"${XDEBUG_MODE}\" = 'coverage' ]; then phpunit; else phpunit --no-coverage; fi",
        "build": [
            "@composer bin box require --dev humbug/box",
            "box validate",
            "box compile"
        ]
    },
    "bin": [
        "shellvar"
    ]
}
